<%= cell_title(@target) %>

<%= cell_content do %>
  <dl>
    <% @traits.compact.each do |i| %>
      <dt><%= i.name %></dt>
      <dd><%= format_trait(@target, i) %></dd>
    <% end %>
  </dl>
<% end %>

<%= link_to scene_path(@variety.scene(:edit), @target), :class => 'btn' do %>
  <i class="icon-pencil"></i>
  Edit
<% end %>
