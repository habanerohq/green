<%= cell_title(@target) %>

<%= cell_content do %>
  <dl class="dl-horizontal">
    <% @traits.compact.each do |i| %>
      <dt><%= i.name %></dt>
      <dd><%= format_trait(@target, i) %></dd>
    <% end %>
  </dl>
<% end %>

<% if @feature.scene %>
  <%= link_to scene_path(@feature.scene.edit_scene, @target), :class => 'btn' do %>
    <i class="icon-pencil"></i>
    Edit
  <% end %>
<% end %>