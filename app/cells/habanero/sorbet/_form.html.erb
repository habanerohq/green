<%= form_for(@target, :as => "placement_#{@placement.id}",
                      :url => '', # use the page or the current page
                      :html => {:method => (@target.new_record? ? :post : :put)}) do |f| -%>

  <pre><%= @target.errors.inspect %></pre>

  <% @ingredients.each do |ingredient| -%>
    <%= f.ingredient ingredient %>
  <% end %>

  <div class="form-actions">
    <%= f.submit :class => 'btn btn-primary' -%>
    <%= link_to 'Delete', '', :class => 'btn btn-danger', :confirm => 'Sure?', :method => :delete %>
  </div>
<% end %>
