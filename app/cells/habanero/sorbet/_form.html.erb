<%= simple_form_for(@target, :as => @placement.params_key,
      :url => '', # use the page or the current page
      :method => (@target.new_record? ? :post : :put),
      :builder => Habanero::IngredientsFormBuilder,
      :html => { :class => 'form-horizontal' }) do |f| -%>

  <% if @target.errors.present? %>
    <div class="alert alert-error">Some errors were found, please take a look:</div>
  <% end %>

  <% @ingredients.each do |ingredient| -%>
    <%= f.ingredient_input ingredient %>
  <% end %>

  <div class="form-actions">
    <%= f.submit :class => 'btn btn-primary' -%>

    <% if @target.persisted? %>
      <%= link_to 'Delete', '',
        :class => 'btn btn-danger',
        :confirm => 'Are you sure?',
        :method => :delete %>
    <% end %>
  </div>
<% end %>
