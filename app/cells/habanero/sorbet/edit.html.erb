<%= cell_div do %>
  <%= cell_title("#{@target} editor") %>

  <%= cell_content do %>
    <%= form_for(@target, :as => "placement_#{@placement.id}",
                          :url => '', # use the page or the current page
                          :builder => Habanero::IngredientsFormBuilder,
                          :html => {:method => (@target.new_record? ? :post : :put)}) do |f| -%>
      <% @ingredients.each do |ingredient| -%>
        <%= f.ingredient ingredient %>
      <% end %>

      <div class="form-actions">
        <%= f.submit :class => 'btn btn-primary' -%>
      </div>
    <% end %>
  <% end %>
<% end %>
