<%= cell_div do %>
  <%= cell_title(@target) %>

  <%= cell_content do %>
    <dl>
      <% @ingredients.each do |i| %>
        <dt><%= i.name %></dt>
        <dd><%= format_ingredient(@target, i) %></dd>
      <% end %>
    </dl>
  <% end %>

  <% if @placement.scoop.page %>
    <%= link_to page_path(@placement.scoop.page), :class => 'btn' do %>
      <i class="icon-pencil"></i>
      Edit
    <% end %>
  <% end %>
<% end %>
