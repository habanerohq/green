<%= simple_form_for(@sorbet.klass.new, :as => @placement.params_key,
                      :url => '', # use the page or the current page
                      :builder => Habanero::SearchFormBuilder,
                      :html => {:method => :put}) do |f| -%>

  <% @ingredients.each do |ingredient| -%>
    <%= f.ingredient_input ingredient %>
  <% end %>

  <div class="form-actions">
    <%= f.submit 'Search', :class => 'btn btn-primary' -%>
  </div>
<% end %>
