<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body class="scene <%= @scene.garden.names_idified %> <%= @scene.name.idify %>">

<div class="<%= layout_class(@scene.layout) %>">
  <% @scene.layout.rows.each do |r| %>
    <div class="<%= row_class(r) %>">
      <% r.regions.each do |reg| %>
        <%= content_for_region(reg) %>
      <% end %>      
    </div>
  <% end %>
</div>

</body>
</html>